<div class="container-connexion">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h2>Connexion</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false, label: "Mot de passe" %>
          <%= f.input :remember_me,label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable?%>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Se connecter", class: "btn btn-primary btn btn-width"%>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
