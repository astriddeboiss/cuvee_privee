<h1><%= @vine.name %></h1>
<div>
  <ul>
    <li><%= @vine.picture %></li>
    <li><%= @vine.location %></li>
    <li><%= @vine.variety %></li>
    <li><%= @vine.description %></li>
    <li><%= @vine.price %></li>
  </ul>
</div>

<div>
  <%= simple_form_for([@vine, @booking], method: "post") do |f|%>
  <%= f.input :start_at %>
  <%= f.submit "Adopt this wine and pay" %>
  <% end %>
</div>
